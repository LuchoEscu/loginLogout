<div class="container" style="margin-bottom: 50px; margin-top: 50px;">
    <div class="row">
        <div class="col-md-7">
            <h3>Listado de productos.</h3>
        </div>
        <div class="col-md-5 text-end">
            <a class="btn btn-success" href="/admin/productos/agregar"><i class="fa fa-plus" aria-hidden="true"></i>Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Producto</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Imagen</th>
                        <th scope="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each productos}}
                    <tr>
                        <td scope="row">{{id}}</td>
                        <td>{{nombre}}</td>
                        <td>${{precio}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="tex-end">
                            <a class="btn btn-seconday" href="/admin/productos/modificar/{{id}}"><i class="fa fa-pencil" 
                            aria-hidden="true"></i></a>

                            <a class="btn btn-seconday" href="/admin/productos/eliminar/{{id}}"><i class="fa fa-trash" 
                            aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>